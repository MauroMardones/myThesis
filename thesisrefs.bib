issn = {13541013},
journal = {Global Change Biology},
keywords = {Catch,Climate change,Fisheries,Global,Marine,Redistribution},
mendeley-groups = {DOCAS,DOCAS/Ensayo{\_}CC,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
number = {1},
pages = {24--35},
