file = {:Users/mauriciomardones/DOCAS/Referencias/bryndum-buchholz2018.pdf:pdf},
issn = {13652486},
journal = {Global Change Biology},
keywords = {climate change,ensemble modeling,future projection,marine animal biomass,marine ecosystem models,model intercomparison,ocean basins,uncertainty},
mendeley-groups = {DOCAS},
number = {2},
pages = {459--472},
pmid = {30408274},
title = {{Twenty-first-century climate change impacts on marine animal biomass and ecosystem structure across ocean basins}},
volume = {25},
