journal = {Aquatic Conservation: Marine and Freshwater Ecosystems},
keywords = {Acidification,Climate change,Coastal,Disturbance,Ecosystem services,Estuary,Fish,Invertebrates,Ocean},
mendeley-groups = {DOCAS,DOCAS/Ensayo{\_}CC},
number = {3},
pages = {368--388},
title = {{Review of climate change impacts on marine fisheries in the UK and Ireland}},
volume = {22},
year = {2012}
}
@article{Wrona2006,
