issn = {10543139},
journal = {ICES Journal of Marine Science},
keywords = {Climate change,Gulf of Alaska,IPCC model output,Management strategy evaluation,Stock assessment,Walleye pollock},
mendeley-groups = {DOCAS},
number = {7},
pages = {1614--1632},
title = {{The evaluation of two management strategies for the gulf of Alaska walleye pollock fishery under climate change}},
