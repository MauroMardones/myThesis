issn = {22967745},
journal = {Frontiers in Marine Science},
keywords = {Baltic Sea,Benthic fauna,Ecopath with Ecosim (EwE),Fish,Interacting stressors,Numerical model,Sensitivity analysis},
mendeley-groups = {DOCAS/Ensayo{\_}CC,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
