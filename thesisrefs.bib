journal = {Frontiers in Marine Science},
keywords = {bycatch, spatial closures, dynamic ocean managemen},
mendeley-groups = {DOCAS},
number = {March},
pages = {1--19},
title = {{Comparing Dynamic and Static Time-Area Closures for Bycatch Mitigation: A Management Strategy Evaluation of a Swordfish Fishery}},
