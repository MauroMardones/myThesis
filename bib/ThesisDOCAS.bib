doi = {10.3389/fevo.2021.624918},
file = {:Users/mauriciomardones/REFERENCIAS/Ensayo{\_}CC/Caccavoetal2021.pdf:pdf},
journal = {Frontiers in Ecology and Evolution},
keywords = {marine ecosystem assessment, climate change, conse},
