keywords = {Ecological niche,Environmental factors,Fish ecology,Growth limitation,NS-IBTS,North Sea,North Sea International Bottom Trawl Survey,von Bertalanffy},
mendeley-groups = {DOCAS/LBSPR},
pages = {57--73},
publisher = {Inter-Research Science Center},
title = {{Growth as a measure for environmental conditions and relatedness of North Sea fish stocks}},
volume = {725},
year = {2023}
