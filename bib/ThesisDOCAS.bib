issn = {18739652},
journal = {Polar Science},
keywords = {Air temperature,Antarctic peninsula,Change point,READER database,Warming and cooling trends},
mendeley-groups = {Essay{\_}I{\_}GeoSistema},
number = {February},
pages = {100653},
publisher = {Elsevier B.V.},
title = {{A review of the observed air temperature in the Antarctic Peninsula. Did the warming trend come back after the early 21st hiatus?}},
url = {https://doi.org/10.1016/j.polar.2021.100653},
volume = {28},
