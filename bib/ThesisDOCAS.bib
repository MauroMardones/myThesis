@article{CurtisDeutsch1,
  title = {Climate change tightens a metabolic constraint on marine habitats},
  author = {Deutsch, Curtis and Ferrel, Aaron and Seibel, Brad and P{\"o}rtner, Hans-Otto and Huey, Raymond B.},
  journal = {Science},
  volume = {348},
