file = {:Users/mauriciomardones/Library/Application Support/Mendeley Desktop/Downloaded/Atkinson et al. - 2008 - Oceanic circumpolar habitats of Antarctic krill.pdf:pdf},
issn = {01718630},
journal = {Marine Ecology Progress Series},
keywords = {Bottom-up control,Circumpolar,Distribution,Euphausiid,Growth,Mortality,Predation,Risk,Top-down control},
mendeley-groups = {DOCAS},
