journal = {Fish and Fisheries},
keywords = {Climate change,ecosystem modelling,environmental drivers,fish ecophysiology,ocean acidification,process understanding},
mendeley-groups = {DOCAS/Ensayo{\_}CC,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
number = {4},
pages = {972--1004},
title = {{Modelling climate change impacts on marine fish populations: process-based integration of ocean warming, acidification and other environmental drivers}},
