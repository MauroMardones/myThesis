issn = {2296701X},
journal = {Frontiers in Ecology and Evolution},
keywords = {antarctica,biogeochemistry,climate,deep chlorophyll maximum,ocean colour,phytoplankton,phytoplankton, climate, Antarctica, biogeochemistr},
