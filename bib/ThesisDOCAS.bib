file = {:Users/mauriciomardones/DOCAS/2{\_}Sem{\_}2021/GeoSistemas/Lecturas Clase Jorge Carrasco/Vorrattetal2020.pdf:pdf},
issn = {18149332},
journal = {Climate of the Past},
mendeley-groups = {Essay{\_}I{\_}GeoSistema},
