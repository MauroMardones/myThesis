journal = {Marine Ecology Progress Series},
keywords = {Demographic truncation,European hake,Fish population dynamics,Mediterranean climate,Synergistic effects climate-fishing},
mendeley-groups = {DOCAS/Ensayo{\_}CC,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
number = {April 2014},
pages = {1--12},
title = {{Synergistic effects of fishing-induced demographic changes and climate variation on fish population dynamics}},
