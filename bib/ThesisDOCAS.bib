doi = {10.1016/j.fishres.2015.03.023},
file = {:Users/mauriciomardones/Library/Application Support/Mendeley Desktop/Downloaded/Kinzey, Watters, Reiss - 2015 - Selectivity and two biomass measures in an age-based assessment of Antarctic krill (Euphausia superba).pdf:pdf},
issn = {01657836},
journal = {Fisheries Research},
keywords = {Acoustic biomass,Integrated modeling,Net biomass,Simulation testing,Survey selectivity},
mendeley-groups = {DOCAS/Ensayo{\_}CC,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
