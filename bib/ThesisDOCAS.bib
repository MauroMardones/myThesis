journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Cryopreservation,Subglacial ecosystems},
mendeley-groups = {DOCAS/Exa{\_}Eco,DOCAS/Uni{\_}Inv{\_}I},
number = {24},
pages = {9839--9844},
