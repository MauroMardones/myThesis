journal = {Marine Ecology Progress Series},
keywords = {abundance,antarctic krill,ccamlr,climate change,commission for the conservation,distribution,ecosystem,food web,management,of antarctic marine living,resources},
mendeley-groups = {Essay{\_}I{\_}GeoSistema},
