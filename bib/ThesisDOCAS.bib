mendeley-groups = {DOCAS/LBSPR},
number = {July},
pages = {105770},
publisher = {Elsevier Ltd},
title = {{What is needed to implement a sustainable expansion of the Antarctic krill fishery in the Southern Ocean?}},
url = {https://doi.org/10.1016/j.marpol.2023.105770},
volume = {155},
