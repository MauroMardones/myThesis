file = {:Users/mauriciomardones/DOCAS/2{\_}Sem{\_}2021/GeoSistemas/Lecturas Clase Deniz Bozkurt/Bozkurt2021{\_}Article{\_}TemperatureAndPrecipitationPro.pdf:pdf},
isbn = {0038202105667},
