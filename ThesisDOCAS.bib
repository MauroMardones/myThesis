issn = {09603166},
journal = {Reviews in Fish Biology and Fisheries},
keywords = {Climate change,Exploitation rate,Fish biomass,Fisheries management,Global warming,Meta-analysis},
mendeley-groups = {DOCAS,DOCAS/Ensayo{\_}CC},
number = {2},
pages = {561--575},
title = {{The adaptive capacity of fishery management systems for confronting climate change impacts on marine populations}},
volume = {24},
year = {2014}
}
