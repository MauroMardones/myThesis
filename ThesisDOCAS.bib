doi = {10.1007/s00382-018-4158-7},
file = {:Users/mauriciomardones/Library/Application Support/Mendeley Desktop/Downloaded/Oyarz{\'{u}}n, Brierley - 2019 - The future of coastal upwelling in the Humboldt current from model projections.pdf:pdf},
