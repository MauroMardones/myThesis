author = {Jahnsen-Guzm{\'{a}}n, N. and Lagos, N. A. and Lardies, M. A. and Vargas, C. A. and Fern{\'{a}}ndez, C. and {San Mart{\'{i}}n}, V. A. and Saavedra, L. and Cuevas, L. Antonio and Quij{\'{o}}n, P. A. and Duarte, C.},
doi = {10.1016/j.scitotenv.2020.141723},
file = {:Users/mauriciomardones/DOCAS/2{\_}Sem{\_}2021/GeoSistemas/Lecturas Cristian Vargas/STOTEN, Jahnsen-Guzm{\'{a}}n et al.2021.pdf:pdf},
issn = {18791026},
journal = {Science of the Total Environment},
keywords = {Bivalves,Environmental refuges,Fjords},
mendeley-groups = {DOCAS/Essay{\_}II{\_}Geosistema},
pages = {141723},
pmid = {32892078},
publisher = {Elsevier B.V.},
title = {{Environmental refuges increase performance of juvenile mussels Mytilus chilensis: Implications for mussel seedling and farming strategies}},
